@import './slider.styl'
@import './form.styl'
@import './button.styl'
@import 'hover.css/css/hover-min.css'

.logo
  width 200px
  height 48px

.container.fluid
  background-color #F4F4F4

.fade-enter-active, .fade-leave-active
  transition: opacity 1s;

.fade-enter, .fade-leave-to
  opacity: 0;

.fade
  &-enter-active, &-leave-active, &-leave-to
    transition: .8s ease-in-out
    position: absolute
    top: 0
    left: 0

  &-enter, &-leave, &-leave-to
    opacity: 0

.logo-parallax
  width 350px
  height 80px

.container
  padding 0

p
  margin-bottom 0

.carousel__wrapper
  height 600px

.application--wrap > main:not(.content)
  flex-direction: column

.head-title
  color #2EAEE4
  font-weight normal
  font-size 1.5rem
  font-family 'Open Sans'

.btn--active
  background-color transparent !important

.wrapper
  max-width 1600px
  margin 0 auto

@media (max-width 1600px)
  .wrapper
    max-width 1200px
  